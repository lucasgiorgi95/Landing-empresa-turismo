---
// Componente Beneficios - Por qué elegir nuestros servicios

interface Beneficio {
  id: number;
  titulo: string;
  descripcion: string;
  icono: string;
}

const beneficios: Beneficio[] = [
  {
    id: 1,
    titulo: "Seguridad Garantizada",
    descripcion: "Viaja con confianza. Todos nuestros destinos y servicios cumplen con los más altos estándares de seguridad internacional.",
    icono: "shield",
  },
  {
    id: 2,
    titulo: "Experiencias Únicas",
    descripcion: "Acceso exclusivo a experiencias auténticas y personalizadas que no encontrarás en otros lugares.",
    icono: "star",
  },
  {
    id: 3,
    titulo: "Mejores Precios",
    descripcion: "Ofertas competitivas y paquetes especiales que te permiten viajar más por menos dinero.",
    icono: "tag",
  },
];
---

<section class="w-full bg-gradient-to-br from-turismo-bg to-white py-20 md:py-28 lg:py-32 px-6 md:px-12 lg:px-20">
  <div class="max-w-7xl mx-auto">
    
    <!-- Encabezado de la sección -->
    <div class="text-center mb-16 md:mb-20 animate-fade-in">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-turismo-text mb-4">
        Por Qué Elegirnos
      </h2>
      <p class="text-lg text-turismo-text-secondary max-w-2xl mx-auto">
        Descubre los beneficios que nos hacen la mejor opción para tus viajes
      </p>
    </div>

    <!-- Grid de beneficios -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-10">
      {beneficios.map((beneficio, index) => (
        <div 
          class="bg-white rounded-xl p-8 md:p-10 shadow-lg hover:shadow-2xl transform hover:translate-y-[-10px] transition-all duration-300 animate-slide-up"
          style={`animation-delay: ${index * 0.15}s;`}
        >
          <!-- Icono -->
          <div class="mb-6">
            {beneficio.icono === "shield" && (
              <svg class="w-16 h-16 text-turismo-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            )}
            {beneficio.icono === "star" && (
              <svg class="w-16 h-16 text-turismo-primary" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
              </svg>
            )}
            {beneficio.icono === "tag" && (
              <svg class="w-16 h-16 text-turismo-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
              </svg>
            )}
          </div>

          <!-- Título -->
          <h3 class="text-2xl font-bold text-turismo-text mb-4">
            {beneficio.titulo}
          </h3>

          <!-- Descripción -->
          <p class="text-turismo-text-secondary text-base leading-relaxed">
            {beneficio.descripcion}
          </p>

          <!-- Línea decorativa -->
          <div class="mt-6 h-1 w-12 bg-gradient-to-r from-turismo-primary to-turismo-highlight rounded-full"></div>
        </div>
      ))}
    </div>

    <!-- Estadísticas -->
    <div class="mt-20 md:mt-28 grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
      <div class="animate-fade-in" style="animation-delay: 0.3s;">
        <p class="text-4xl md:text-5xl font-bold text-turismo-primary mb-2">50K+</p>
        <p class="text-turismo-text-secondary">Viajeros Felices</p>
      </div>
      <div class="animate-fade-in" style="animation-delay: 0.4s;">
        <p class="text-4xl md:text-5xl font-bold text-turismo-primary mb-2">150+</p>
        <p class="text-turismo-text-secondary">Destinos</p>
      </div>
      <div class="animate-fade-in" style="animation-delay: 0.5s;">
        <p class="text-4xl md:text-5xl font-bold text-turismo-primary mb-2">15+</p>
        <p class="text-turismo-text-secondary">Años Experiencia</p>
      </div>
      <div class="animate-fade-in" style="animation-delay: 0.6s;">
        <p class="text-4xl md:text-5xl font-bold text-turismo-primary mb-2">24/7</p>
        <p class="text-turismo-text-secondary">Soporte</p>
      </div>
    </div>
  </div>
</section>
